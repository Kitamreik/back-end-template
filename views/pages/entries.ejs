<!-- Show me all of the entries of data from Feature Model -->
<%- include('../partials/head') -%> 
<!-- Insert header.ejs -->
    <title>Entry Page</title>
<%- include('../partials/nav') -%> 
<!-- Insert nav.ejs -->
<div class="content-container link-styling">
    <section class="content-container-section">
        <h1>Entry Page</h1>
        <h2>Data</h2>
            <p>Listing of all the entries you can find in the database.</p>
    </section>
    <section class="content-container-section">
        <div>
            <!-- Using a for...of loop, loop through the featureArray and display each entry -->
            <% for (entry of featureArray)  { %>
            <a href="/entries/<%= entry._id %>" class="mini-container">
                <div class="content-container">
                    <h3><%= entry.test %> <%= entry.test2 %></h3>
                </div>
            </a>
            <% } %> 
          </div>
        </div>
    </section>

</div>
<!-- Insert footer.ejs -->
<%- include('../partials/footer') -%> 
